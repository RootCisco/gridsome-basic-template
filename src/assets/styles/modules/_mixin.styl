// 第一引数で基準となる画面幅のフォントサイズ、第二引数で基準となる画面幅を入力
get_vw($size, $viewport = 375)
  $rate = (100 / $viewport)
  return $rate * $size * 1vw

get_vh($size, $viewport = 812)
  $rate = (100 / $viewport)
  return $rate * $size * 1vh

// font-size vw
fz_vw($font_size = 10, $view = 375)
  font-size: $font_size * 1px
  font-size: get_vw($font_size, $view)

// font-size vh
fz_vh($font_size = 10, $view = 812)
  font-size: $font_size * 1px
  font-size: get_vh($font_size, $view)

// hover
hover()
  @media (hover: hover), (-ms-high-contrast: none)
    &:hover
      {block}

// target selector hover
hover($target)
  @media (hover: hover), (-ms-high-contrast: none)
    {$target}
      &:hover
        {block}

// breakpoint
breakpoint(targets)
  $conditions = ()

  for target in targets
    push($conditions, $media-queries[target])

  $condition = join(', ', $conditions)

  @media $condition
    {block}
